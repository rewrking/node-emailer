{
    "name": "nodemailer-mjml-sender",
    "version": "1.0.0",
    "author": "Andrew R. King",
    "description": "Wrapper class around nodemailer & mjml to effortlessly send an email from a node server",
    "license": "MIT",
    "main": "dist/cjs/index.js",
    "types": "dist/esm/index.d.ts",
    "module": "dist/esm/index.es.js",
    "scripts": {
        "test": "ts-node -P tsconfig-test.json ./test/index.ts",
        "build": "rm -rf dist && mkdir dist && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json"
    },
    "repository": {
        "url": "git@github.com:rewrking/nodemailer-mjml-sender.git"
    },
    "dependencies": {
        "html-minifier": "4.0.0",
        "mjml": "4.12.0",
        "mjml-core": "4.12.0",
        "nodemailer": "6.7.5"
    },
    "devDependencies": {
        "@types/html-minifier": "4.0.2",
        "@types/isomorphic-fetch": "0.0.36",
        "@types/mjml": "4.7.0",
        "@types/node": "17.0.35",
        "@types/nodemailer": "6.4.4",
        "dotenv": "16.0.1",
        "isomorphic-fetch": "3.0.0",
        "prettier": "2.6.2",
        "ts-node": "10.8.0",
        "typescript": "4.6.4"
    }
}